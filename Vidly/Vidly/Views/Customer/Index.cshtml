@using Vidly.Models
@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<div class="row">
    <h2>@ViewBag.Title</h2>
</div>
<div class="row">
    @Html.ActionLink("Create", "New", "Customer", null, new { @class = "btn btn-primary" })
</div>

<div class=" top-buffer row">
    @if (!Model.Any())
    {
        <p>There are no customers</p>
    }
    else
    {

        <table class="table table-bordered table-hover">
            <thead>
            <tr>
                <th>Customer</th>
                <th>Membership</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Edit", "Customer", new { id = item.Id}, null)</td>
                    <td>@item.MermbershipType.Name</td>
                </tr>

            }
            </tbody>
        </table>

    }
</div>
