@using Vidly.Models
@model Vidly.Models.Customer

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-3">
        <ul class="list-group">
            <li class="list-group-item list-group-item-text">Membership Type: @Model.MermbershipType.Name</li>
            @if (Model.BirthDate.HasValue)
            {
                <li class="list-group-item list-group-item-text">Date of birth: @String.Format("{0:d}", Model.BirthDate)</li>
            }
        </ul>
    </div>
</div>

